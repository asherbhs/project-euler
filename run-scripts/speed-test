for file in "$@"
do
    case "${file##*.}" in
        kt)
            ~/programming/project-euler/run-scripts/run-kotlin -t $file
            echo 
        ;;
        hs) 
            ~/programming/project-euler/run-scripts/run-haskell -t $file
            echo
        ;;
        c) 
            ~/programming/project-euler/run-scripts/run-c -t $file
            echo
        ;;
        py)
            ~/programming/project-euler/run-scripts/run-python -t $file
            echo
        ;;
        java)
            ~/programming/project-euler/run-scripts/run-java -t $file
            echo
        ;;
    esac
done